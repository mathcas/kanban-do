<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="300dp"
    android:gravity="center"
    android:layout_height="250dp"
    android:orientation="vertical"
    android:layout_margin="@dimen/default_8dp">


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="New Card"
        android:textSize="32dp"
        android:layout_gravity="center"/>

    <EditText
        android:id="@+id/titulo_card"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/default_8dp"
        android:hint="@string/title_card" />

    <EditText
        android:id="@+id/descricao_card"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/default_8dp"
        android:hint="@string/description_card" />

    <Button
        android:id="@+id/confirm_card"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/default_8dp"
        android:text="Confirm"
        android:gravity="center"/>

</LinearLayout>
